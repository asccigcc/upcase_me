extends layout

block content
  .jumbotron
    h1 Upcase
    h2 If you need to Upcase or more.
    p.lead Only select a option and paste or type your text.
    ul.nav.nav-pills
      li.disabled( data-type="upcase" )
        a(href='javascript:void(0)') Upcase
      li( data-type="downcase" )
        a(href='javascript:void(0)') Downcase
      li( data-type="capitalize" )
        a(href='javascript:void(0)') Capitalize
      li( data-type="swapCase" )
        a(href='javascript:void(0)') Swapcase
      li( data-type="reverse" )
        a(href='javascript:void(0)') Reverse
      li( data-type="titleize" )
        a(href='javascript:void(0)') Titleize
    form
      .row.marketing
        .col-lg-6
          textarea.form-control#input(rows='10', placeholder="Write your text here!", autocomplete="off")
        .col-lg-6
          textarea.form-control#output(rows='10', placeholder='See here your upcase!', autocomplete="off")
          br
          .btn.btn-success.btn-sm.copy-button( data-clipboard-target="output" ) Copy text
      button.btn.btn-link#reset(type='reset') Clear all
